@model Szakdoga.Models.UserViewModel
@{
    ViewBag.Title = "Módosítás";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center align-items-center">
    <div class="card">
        <div class="col-md-12">
            <div class="text-center ">
                <h2>@ViewBag.Title</h2>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Edit", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm">
                            <div class="form-row">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.user.TeljesNev, new { @class = "col-md-12 control-label" })
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(m => m.user.TeljesNev, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.user.Email, new { @class = "col-md-12 control-label" })
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(m => m.user.Email, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <div class="text-center">
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-12 col-md-12 text-center">
                            @Html.HiddenFor(m => m.user.Id)

                            <input class="btn btn-primary" type="submit" value="Módosítás">
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}