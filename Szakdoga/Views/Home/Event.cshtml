@model IEnumerable<Szakdoga.Models.MainCalendar>
@{
    ViewBag.Title = "Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="box-title">
            <b>Események</b>
        </h3>
    </div>
    <!-- /.box-header -->
    <div class="panel-body">
        <table class="table table-hover table-bordered table-condensed" id="events">
            <thead>
                <tr>
                    <td><b>Tárgy</b></td>
                    <td><b>Leírás</b></td>
                    <td><b>Kezdés</b></td>
                    <td><b>Vég</b></td>
                </tr>
            </thead>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.Subject</td>
                    <td>@e.Description</td>
                    <td>@e.Start</td>
                    <td>@e.End</td>
                    <td>

                        @Html.ActionLink("Törlés", "Delete", "Home", new { Id = e.EventId }, new { @class = "btn btn-danger" })
                    </td>
                </tr>

            }
        </table>
    </div>

</div>


