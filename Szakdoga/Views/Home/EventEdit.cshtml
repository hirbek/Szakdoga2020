@model Szakdoga.Models.MainCalendarViewModel
@{
    ViewBag.Title = "Módosítás";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center align-items-center">
    <div class="card">
        <div class="col-md-12">
            <div class="text-center ">
                <h2>@ViewBag.Title</h2>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    

                    <div class="form-row">
                        <div class="form-group">
                            @Html.LabelFor(m => m.events.Subject, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.events.Subject, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            @Html.LabelFor(m => m.events.Description, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.events.Description, new { @class = "form-control" })
                            </div>
                        </div>
                        </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.events.Start, new { @class = "col-md-12 control-label" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.events.Start, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            @Html.LabelFor(m => m.events.End, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.events.End, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
              
            
                
                    <div class="form-group">
                        <div class="col-md-offset-12 col-md-12 text-center">
                            @Html.HiddenFor(m => m.events.EventId)
                            @Html.AntiForgeryToken()
                            <input class="btn btn-primary" type="submit" value="Módosítás" style="border: 1px solid black">
                        </div>
                    </div>
             
           

        }
            </div>
        </div>
        </div>
        </div>


