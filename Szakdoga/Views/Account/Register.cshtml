@model Szakdoga.Models.RegisterViewModel
@{
    ViewBag.Title = "Regisztráció";
}
<div class="row justify-content-center align-items-center">
    <div class="card">
        <div class="col-md-12">
            <div class="text-center">
                <h2>@ViewBag.Title</h2>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-row">
                        <div class="form-group">
                            @Html.LabelFor(m => m.TeljesNev, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">

                                @Html.TextBoxFor(m => m.TeljesNev, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">

                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">

                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">

                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <div class="text-center">
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger col-md-10" })
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-12 col-md-12 text-center">
                            <input type="submit" class="btn btn-default" value="Regisztrálok" style="border: 1px solid black" />
                        </div>

                    </div>

                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
